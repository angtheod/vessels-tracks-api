{
    "name": "assignment/angelos",
    "description": "RESTful API for Vessels Tracks",
    "authors": [
        {
            "name": "Angelos Theodorakopoulos",
            "email": "angtheod@gmail.com"
        }
    ],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "laravel/lumen-framework": "^9.0.3"
    },
    "require-dev": {
        "fakerphp/faker": "^1.9.1",
        "mockery/mockery": "^1.3.1",
        "phpunit/phpunit": "^9.5.10",
        "zircote/swagger-php": "^4.4.7"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "process-timeout": 0
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-install-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@php -r \"require 'vendor/autoload.php'; echo \\Illuminate\\Support\\Str::random(32).PHP_EOL;\"",
            "@php -S api:8080 -t public"
        ]
    }
}
